Bootstrap: docker
From: debian:bullseye-slim

%post
    apt-get update && apt-get install -y \
        python3 \
        python3-setuptools \
        perl \
        gcc \
        make \
        binutils \
        zlib1g-dev \
        pkg-config \
        libfreetype6-dev \
        libpng-dev \
        python3-matplotlib \
        git \
        openjdk-11-jre-headless \
        r-base \
        && rm -rf /var/lib/apt/lists/*
    
    git clone https://github.com/ablab/quast.git
    cd quast
    python3 setup.py install_full